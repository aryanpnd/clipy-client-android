<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <Button
        android:id="@+id/toggleServiceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Clipboard Sync" />

    <Button
        android:id="@+id/sendClipboardButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Clipboard to Server" />

    <!-- ScrollView to show clipboard content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/clipboardContentTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clipboard content will appear here"
            android:textSize="16sp" />
    </ScrollView>
</LinearLayout>
